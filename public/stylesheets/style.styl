body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif

.hits
  width: 500px
  height: 500px
  rect
    &.status_2
      fill: #2ECC71
    &.status_3
      fill: #3498DB
      &.status_304
        fill: #2E9671
    &.status_4
      fill: #95A5A6
    &.status_5
      fill: #E74C3C
  #tooltip
    display: none
    position: fixed
    background-color: rgba(0,0,0,.5)
    color: white
    border-radius: 5px
    padding: 5px 10px

.metrics
  float: right

.librato-metrics
  position: fixed
  bottom: 0
  left: 0
  right: 0
  width: 100%
  margin: auto
